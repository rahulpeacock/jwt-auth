{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/api/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules"]
}
